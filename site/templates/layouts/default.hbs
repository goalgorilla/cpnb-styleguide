<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{{title}}</title>
    <meta name="description" content="{{description}}">

    <meta name="viewport" content="width=device-width, user-scalable=1, initial-scale=1">
    <meta name="msapplication-tap-highlight" content="no">

    <!-- build:css css/style.min.css -->
    <link rel="stylesheet" href="bower_components/normalize-css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- endbuild -->

    <link rel="icon" type="image/png" href="img/favicon/favicon-16x16.png" sizes="16x16">
  </head>
  <body class="atomic" id="top">
    <header role="banner">
      {{> logo}}
      {{> nav}}
    </header>

    <main role="main">
      {% body %}
    </main>

    {{#is 'index' this.basename}}
      {{> footer}}
    {{/is}}

    {{#any 'index' this.basename}}
    <script class="atomic-js">var button = document.querySelector('button');
button.addEventListener('click', function() {
  console.log('hello world');
})</script>
    {{/any}}

    {{#any 'index' this.basename}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/animation.gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/plugins/ScrollToPlugin.min.js"></script>
    {{/any}}

    <!-- build:js js/dist/builder.min.js -->
    {{#any 'index' this.basename}}
    <script src="js/src/scrollmation.js"></script>
    <script src="js/lib/prism.js"></script>
    <script src="js/src/atomic-swatch.js"></script>
    <script src="js/src/atomic-generator.js"></script>
    {{/any}}
    <!-- endbuild -->
  </body>
</html>
